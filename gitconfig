[core]
  longpaths = true
	editor = vim
[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  ui = true
  pager = true
[color "status"]
  added = green
  changed = red bold
  untracked = magenta bold
[color "branch"]
  remote = yellow
[alias]
  s = status -s
  st = status
  ci = commit
  br = branch
  co = checkout
  rb = rebase origin/main
  unstage = reset HEAD --
  last = log -1 HEAD
  l = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue)<%an>%Creset' --abbrev-commit
  log1 = log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
  log2 = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all
  meld = !~/git-meld.pl
  df = difftool
	bclean = "!git branch --merged | egrep -v 'master|develop|main|staging|dev' | xargs git branch -d"
  alias = "!git config --list | egrep '^alias.+' | sed -e 's/^alias\\.//' | sed -e 's/^[^=]*=/\\'$'\\033[31m&\\033[(B\\033[m/'"
[user]
	email = jungyh0528@gmail.com
	name = Wooseong Chung
[diff]
  tool = meld
	algorithm = histogram
	colorMoved = plain
	mnemonicPrefix = true
	renames = true
[difftool]
  prompt = false
[credential]
	helper = manager-core
[push]
	default = current
	autoSetupRemote = true
	followTags = true
[fetch]
	prune = true
	autoSetupRemote = true
	followTags = true
[init]
	defaultBranch = main
[column]
	ui = auto
[branch]
	sort = -committerdate
[tag]
	sort = version:refname
